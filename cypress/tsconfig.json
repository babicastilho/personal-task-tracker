{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "isolatedModules": false,
    "types": ["cypress", "node"],
    "resolveJsonModule": true,
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "../",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "../node_modules",
    "../tests"
  ]
}
